/* Reset and base styles */
* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
	font-family: Arial, Helvetica, sans-serif;
}
body {
	background: linear-gradient(135deg, #e0e7ff 0%, #f9fafb 100%);
	color: #333;
}
header {
	background: linear-gradient(90deg, #6366f1 0%, #4f46e5 100%);
	color: #fff;
	padding: 20px 0;
	text-align: center;
	box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
header h1 {
	font-size: 2.2rem;
	margin-bottom: 5px;
}
header p {
	font-size: 1.1rem;
	color: #e0e0e0;
}
nav {
	background: #fff;
	display: flex;
	justify-content: center;
	gap: 30px;
	padding: 10px 0;
	border-bottom: 1px solid #ddd;
	position: sticky;
	top: 0;
	z-index: 10;
}
nav a {
	text-decoration: none;
	color: #4f46e5;
	font-weight: 600;
	transition: color 0.3s;
}
nav a:hover {
	color: #312e81;
}
.hero {
	background: linear-gradient(120deg, rgba(99,102,241,0.85) 0%, rgba(79,70,229,0.85) 100%), url('https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&fit=crop&w=1200&q=60') center/cover no-repeat;
	color: #fff;
	padding: 120px 20px;
	text-align: center;
}
.hero h2 {
	font-size: 3rem;
	margin-bottom: 20px;
	text-shadow: 0 2px 8px rgba(0,0,0,0.2);
}
.hero p {
	font-size: 1.3rem;
	margin-bottom: 30px;
	text-shadow: 0 1px 4px rgba(0,0,0,0.15);
}
.hero button {
	padding: 12px 25px;
	font-size: 1.1rem;
	background: linear-gradient(90deg, #6366f1 0%, #4f46e5 100%);
	border: none;
	border-radius: 6px;
	color: #fff;
	cursor: pointer;
	transition: background 0.3s, transform 0.2s;
	box-shadow: 0 2px 8px rgba(79,70,229,0.15);
}
.hero button:hover {
	background: linear-gradient(90deg, #3730a3 0%, #6366f1 100%);
	transform: scale(1.05);
}
.section {
	padding: 60px 20px;
	max-width: 1100px;
	margin: auto;
}
.section h3 {
	text-align: center;
	font-size: 2rem;
	margin-bottom: 40px;
	color: #4f46e5;
}
.cards {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
	gap: 20px;
}
.card {
	background: linear-gradient(120deg, #fff 60%, #e0e7ff 100%);
	padding: 20px;
	border-radius: 8px;
	box-shadow: 0 2px 6px rgba(0,0,0,0.08);
	transition: transform 0.3s, box-shadow 0.3s;
	text-align: center;
}
.card:hover {
	transform: translateY(-5px) scale(1.03);
	box-shadow: 0 6px 18px rgba(99,102,241,0.12);
}
.card h4 {
	color: #4f46e5;
	margin-bottom: 10px;
}
.card p {
	color: #555;
}
footer {
	background: linear-gradient(90deg, #1f2937 0%, #6366f1 100%);
	color: #ccc;
	text-align: center;
	padding: 20px;
	margin-top: 40px;
}
/* Responsive tweaks */
@media (max-width: 600px) {
	.hero h2 {
		font-size: 2rem;
	}
	.section {
		padding: 30px 10px;
	}
}
